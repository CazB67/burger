<div class ="row mt-2">
    <div class="col-md-6">
        <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
        </ul>
    </div> 
    
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block2 devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class ="row mt-2">
    <div class="col-md-12 text-center">
        <form class="create-form">
            <div class="form-group center-block">
                <textarea class="form-control text-center" id="hamburger" rows="3" placeholder="Enter a burger you want to eat then click the 'Submit' button." name="burger_name"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mb-4">Submit</button>
        </form>
    </div>
</div>

